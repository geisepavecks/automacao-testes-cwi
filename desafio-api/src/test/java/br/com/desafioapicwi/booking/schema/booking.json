{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "description": "Booking schema.",
  "properties": {
    "firstname": {
      "description": "Customer's first name",
      "type": "string"
    },
    "lastname": {
      "description": "Customer's last name",
      "type": "string"
    },
    "totalprice": {
      "description": "Booking's total price",
      "type": "number"
    },
    "depositpaid": {
      "description": "Tells whether total price was paid",
      "type": "boolean"
    },
    "bookingdates": {
      "description": "Object containing in and out dates",
      "type": "object",
      "properties": {
        "checkin": {
          "type": "string"
        },
        "checkout": {
          "type": "string"
        }
      }
    },
    "additionalneeds": {
      "description": "What else the customer needs",
      "type": "string"
    }
  }
}